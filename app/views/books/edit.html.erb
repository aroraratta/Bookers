<h1 class=edit-title>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class=edit-field>
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class=edit-field>
    <p>Body</p>
    <%= f.text_area :body %>
  </div>
  <div class=edit-field>
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<div class=edit-button><%= link_to "Show", book_path(@book.id) %></div>
<div class=edit-button>|</div>
<div class=edit-button><%= link_to "Back", books_path %></div>