<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th class=index-table-title>Title</th>
      <th class=index-table-title>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class=index-table-contents><%= book.title %></td>
        <td class=index-table-contents><%= book.body %></td>
        <td class=index-table-contents><%= link_to "show", book_path(book.id) %></td>
        <td class=index-table-contents><%= link_to "edit", edit_book_path(book.id) %></td>
        <td class=index-table-contents><%= link_to "destroy", book_path(book.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <div class=index-bottun>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>